@model IEnumerable<Brand>
@{
    ViewBag.Title = "Список марок";
}

<h6 class="bg-primary text-white text-center m-2 p-2">Таблица Брендов</h6>
<div class="m-2">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Название</th>
                <th scope="col" style="width:150px">Редактировать</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Brand p in Model)
            {
                    <tr style="background-color: @((p.IsActive) ? "inherit":"#d3d3d3")">
                        <td>@p.Name</td>
                                <td><a href="/Data/EditOrCreateBrand/@p.Id" class="btn btn-secondary btn-sm">Редактировать</a></td>
                    </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-end">
        <a asp-controller="Data" asp-action="EditOrCreateBrand" class="btn btn-primary">Добавить марку</a>
    </div>
    
</div>